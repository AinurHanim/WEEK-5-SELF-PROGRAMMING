		if (amount <= balance)
		{   balance = balance - amount;   
		      System.out.println("New Account Balance : " + balance);
		}
		else
		{
		      balance = balance - OVERDRAFT_PENALTY;
			    System.out.println("TRANSACTION NOT ALLOWED");
		} 


	}

}
